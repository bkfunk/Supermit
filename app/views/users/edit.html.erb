<h1>New User!</h1>
<%= form_for(@user) do |f| %>
<%= render 'shared/error_messages' %>
  <div class="field">
    <%= f.label :first_name %>:
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %>:
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>